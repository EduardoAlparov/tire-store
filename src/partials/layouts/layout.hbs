<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="format-detection" content="telephone=no">
    <link rel="stylesheet" href="css/styles.css" />
    <title>
        {{ title }}
    </title>

    {{#if haveMap}}
    <script src="https://api-maps.yandex.ru/3.0/?apikey=&lang=ru_RU"></script>
    {{/if}}
</head>

<body class="no-touch {{#if bodyClass}}{{bodyClass}}{{/if}} " ontouchstart="">
    <div class="sprite" aria-hidden="true" style="position: absolute; width: 0; height: 0; overflow: hidden;">
        {{> sprite }}
    </div>

    <div class="page-content">
        {{> header }}
        <main class="page-main">
            {{#block "main"}}

            {{/block}}
        </main>
        {{> footer }}
        {{> ie-placeholder }}
    </div>

    {{> mobile-nav }}
    {{> callback }}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="js/app.js"></script>
    <script src="assets/js/backend.js"></script>

    {{#if haveMap}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://api-maps.yandex.ru/2.1/?apikey=2ed48992-eeaa-4386-9cfa-5ba8379fe2b1&lang=ru_RU"
        type="text/javascript">
        </script>

    <script>

        ymaps.ready(() => {
            // Your code that uses ymaps3 goes here
            const map = new ymaps.Map(document.getElementById('yamap'), {
                // Координаты центра карты
                center: [59.882622, 30.427295],

                // Уровень масштабирования
                zoom: 17
            });

            const placemark = new ymaps.Placemark(
                [59.882622, 30.427295],
                {},
                {
                    preset: 'islands#redIcon'
                }
            );

            map.geoObjects.add(placemark);

        });
    </script>
    {{/if}}
</body>

</html>
