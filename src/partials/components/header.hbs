<header class="page-header">
    <div class="page-header__top-line">
        <div class="page-header__site-container">
            <div class="page-header__info">

                <div class="page-header__phone page-header__row">
                    <span>Отдел продаж:</span>
                    <a href="tel:+74957402019">
                        +7 (495) 740-20-19
                    </a>
                </div>

                <div class="page-header__address page-header__row">
                    <div class="page-header__address-value">
                        Санкт-Петербург, Железнодорожный проспект, 20
                    </div>
                    <span class="page-header__address-times">
                        Пн-Пт, с 10:00-18:00
                    </span>
                </div>
            </div>

            <ul class="page-header__menu menu">
                <li class="menu__item">
                    <a href="./promos.html" class="menu__link">
                        Акции
                    </a>
                </li>
                <li class="menu__item">
                    <a href="./payment.html" class="menu__link">
                        Оплата и Доставка
                    </a>
                </li>
                <li class="menu__item">
                    <a href="./about.html" class="menu__link">
                        О нас
                    </a>
                </li>
                <li class="menu__item">
                    <a href="./news.html" class="menu__link">
                        Новости
                    </a>
                </li>
                <li class="menu__item">
                    <a href="./reviews.html" class="menu__link">
                        Отзывы
                    </a>
                </li>
                <li class="menu__item">
                    <a href="./contacts.html" class="menu__link">
                        Контакты
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="page-header__main-line">
        <nav class="page-header__site-container">
            <a href="/" class="page-header__logo logo">
                <svg aria-hidden="true" class="icon">
                    <use xlink:href="#logo"></use>
                </svg>
            </a>

            <button type="button" class="page-header__catalog-open catalog-btn js-open-catalog">
                <svg aria-hidden="true" class="icon icon-menu">
                    <use xlink:href="#bx-menu"></use>
                </svg>

                <svg aria-hidden="true" class="icon icon-close">
                    <use xlink:href="#bx-close"></use>
                </svg>

                Каталог
            </button>

            <form class="page-header__search-bar search-bar">
                <div class="search-bar__input-body">
                    <input type="search" name="searchbar" id="" required placeholder="Найти...">
                    <input type="reset" value="">
                </div>
                <button type="submit">
                    <svg aria-hidden="true" class="icon icon-menu">
                        <use xlink:href="#bx-search"></use>
                    </svg>
                </button>
            </form>

            <ul class="page-header__control-bar control-bar">
                <li class="control-bar__item">
                    <a href="#" class="control-bar__link icon-btn">
                        <svg aria-hidden="true" class="icon">
                            <use xlink:href="#bx-user"></use>
                        </svg>
                        <span>
                            Войти
                        </span>
                    </a>
                </li>
                <li class="control-bar__item">
                    <a href="#" class="control-bar__link icon-btn icon-btn--with-counter" data-counter="99">
                        <svg aria-hidden="true" class="icon">
                            <use xlink:href="#bx-bar-chart"></use>
                        </svg>
                        <span>
                            Сравнение
                        </span>
                    </a>
                </li>
                <li class="control-bar__item">
                    <a href="#" class="control-bar__link icon-btn icon-btn--with-counter" data-counter="99">
                        <svg aria-hidden="true" class="icon">
                            <use xlink:href="#bx-heart"></use>
                        </svg>
                        <span>
                            Избранное
                        </span>
                    </a>
                </li>
                <li class="control-bar__item">
                    <a href="#" class="control-bar__link icon-btn icon-btn--with-counter" data-counter="99">
                        <svg aria-hidden="true" class="icon">
                            <use xlink:href="#bx-basket"></use>
                        </svg>
                        <span>
                            Корзина
                        </span>
                    </a>
                </li>
            </ul>

            <div class="page-header__mobile-controls">
                <button
                    class="page-header__mobile-search simple-btn simple-btn--icon simple-btn--black js-mobile-search">
                    <svg aria-hidden="true" class="icon icon-active">
                        <use xlink:href="#bx-search"></use>
                    </svg>
                    <svg aria-hidden="true" class="icon icon-close">
                        <use xlink:href="#bx-close"></use>
                    </svg>
                </button>
                <button class="page-header__burger-menu simple-btn simple-btn--icon ">
                    <svg aria-hidden="true" class="icon icon-active">
                        <use xlink:href="#bx-menu"></use>
                    </svg>
                    <svg aria-hidden="true" class="icon icon-close">
                        <use xlink:href="#bx-close"></use>
                    </svg>
                </button>
            </div>
        </nav>

        <div class="page-header__catalog header-catalog">
            <div class="header-catalog__site-container">
                <div class="header-catalog__aside">
                    <ul class="header-catalog__list">
                        <li>
                            <label for="header-catalog-1" class="header-catalog__button js-catalog-button">
                                Шины
                            </label>
                        </li>
                        <li>
                            <label for="header-catalog-2" class="header-catalog__button js-catalog-button">
                                Сопутствующие товары
                            </label>
                        </li>
                    </ul>
                </div>

                <div class="header-catalog__main">
                    <input class="header-catalog__input visually-hidden" type="radio" hidden checked
                        name="header-catalog-radio" id="header-catalog-00">
                    <input class="header-catalog__input visually-hidden" type="radio" hidden name="header-catalog-radio"
                        id="header-catalog-1">
                    <div class="header-catalog__window">
                        <a href="#" class="header-catalog__link">
                            Грузовые
                            <svg aria-hidden="true" class="icon icon-arrow">
                                <use xlink:href="#bx-arrow"></use>
                            </svg>
                            <svg aria-hidden="true" class="icon icon-wheel">
                                <use xlink:href="#link-wheel"></use>
                            </svg>
                        </a>
                        <a href="#" class="header-catalog__link">
                            Легкогрузовые
                            <svg aria-hidden="true" class="icon icon-arrow">
                                <use xlink:href="#bx-arrow"></use>
                            </svg>
                            <svg aria-hidden="true" class="icon icon-wheel">
                                <use xlink:href="#link-wheel"></use>
                            </svg>
                        </a>
                        <a href="#" class="header-catalog__link">
                            Легковые
                            <svg aria-hidden="true" class="icon icon-arrow">
                                <use xlink:href="#bx-arrow"></use>
                            </svg>
                            <svg aria-hidden="true" class="icon icon-wheel">
                                <use xlink:href="#link-wheel"></use>
                            </svg>
                        </a>
                        <a href="#" class="header-catalog__link">
                            Сельскохозяйственные
                            <svg aria-hidden="true" class="icon icon-arrow">
                                <use xlink:href="#bx-arrow"></use>
                            </svg>
                            <svg aria-hidden="true" class="icon icon-wheel">
                                <use xlink:href="#link-wheel"></use>
                            </svg>
                        </a>
                    </div>
                    <input class="header-catalog__input visually-hidden" type="radio" hidden name="header-catalog-radio"
                        id="header-catalog-2">
                    <div class="header-catalog__window">
                        <a href="#" class="header-catalog__link">
                            Товары
                            <svg aria-hidden="true" class="icon icon-arrow">
                                <use xlink:href="#bx-arrow"></use>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-header__breadcrumbs">
        <div class="page-header__site-container breadcrumbs">
            <ul class="breadcrumbs__list">
                {{#each breadcrumbsList}}
                <li class="breadcrumbs__item">
                    <a href="/" class="breadcrumbs__link">
                        {{this}}
                    </a>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</header>
