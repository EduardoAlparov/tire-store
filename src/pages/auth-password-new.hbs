{{#extend "auth"}}
{{#content "main"}}

<section class="section auth-section">
    <div class="auth-section__container">
        <div class="auth-section__picture">
            <picture>
                <source media="(max-aspect-ratio: 4/3)" type="image/webp" srcset="./img/back-svg-m.svg" />
                <source media="(min-aspect-ratio: 4/3)" type="image/webp" srcset="./img/back-svg.svg" />
                <img class="lazy" src="./img/back-svg.svg" alt="">
            </picture>
        </div>

        <div class="auth-section__from-wrapper">
            <form action="" class="modal__body account-block__flex" data-need-validation="">
                <a href="/" class="ready-popup__logo logo">
                    <svg aria-hidden="true" class="icon">
                        <use xlink:href="#logo"></use>
                    </svg>
                </a>

                <div class="auth-section__flex">
                    <h3 class="auth-section__subtitle">Восстановление пароля</h3>
                    <p class="auth-section__text">
                        Введите новый пароль.
                    </p>

                    <div class="auth-section__input order-placing__select-wrapper">
                        <h4>Пароль*</h4>
                        <div class="order-placing__select input-box">
                            <input type="password" name="auth-user-old-email" id="auth-user-old-password" value=""
                                placeholder="Пароль" required data-parsley="">
                        </div>
                    </div>

                    <div class="auth-section__input order-placing__select-wrapper">
                        <h4>Повторите пароль*</h4>
                        <div class="order-placing__select input-box">
                            <input type="pasword" name="auth-user-new-password" id="auth-user-new-password" value=""
                                placeholder="Email" required data-parsley="">
                        </div>
                    </div>
                </div>

                <div class="modal__controls">
                    <button type="submit" class="modal__back-link simple-btn">
                        Сохранить
                    </button>

                    <a href="javascript:history.back()" class="modal__back-link tab tab--red-outlined">
                        Назад
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>


{{/content}}
{{/extend}}
